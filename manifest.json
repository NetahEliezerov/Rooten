{
    "name": "Rooten",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Find your netflix series/movie on rotten tomatoes!",
    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["https://*.netflix.com/*"]
    }],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "popup/index.html"
    }
}